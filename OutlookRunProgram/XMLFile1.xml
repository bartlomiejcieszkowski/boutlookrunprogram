<?xml version="1.0" encoding="utf-8" ?>
<rule>
	<!--<final />-->
	<match>
		<regex>s(?n)(Sample Title)</regex>
		<regex>b(?n)(.*)</regex>
		<regex>t(?n)(me@example.com)</regex>
		<regex>f(?n)(.*@example.com)</regex>
		<regex>c(?n)(.*@example.com)</regex>
		<!-- s,b,c,t,f -->
	</match>
	<actions>
		<action>
			<run></run>
			<args>$b1</args>
			<!--eg:1 $s1 $b2 $f1
				this would translate to:
				$s1 - first match for subject
				$b2 - 2nd match for body
				$
			-->
		</action>
	</actions>
</rule>
