<?xml version="1.0" encoding="utf-8" ?>
<rule>
	<!--<final />-->
	<match>
		<regex>s(Sample Title)</regex>
		<regex>b(.*)</regex>
		<regex>t(me@example.com)</regex>
		<regex>f(.*@example.com)</regex>
		<regex>c(.*@example.com)</regex>
		<!-- s,b,c,t,f
			only explicit captures
		-->
	</match>
	<actions>
		<action>
			<run></run>
			<args>
				<arg>$b1</arg>
				<arg>$f1</arg>
			</args>
			<!--eg:1 $s1 $b2 $f1
				this would translate to:
				$s1 - first match for subject
				$b2 - 2nd match for body
				$
			-->
		</action>
	</actions>
</rule>
